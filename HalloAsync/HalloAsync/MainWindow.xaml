<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <StackPanel Margin="4">
        <Button IsEnabled="False" Click="StartOhneThread">Start (ohne Thread)</Button>
        <Button Click="StartTask">Start Task (Dispatcher)</Button>
        <Button Click="StartTaskMitTS">Start Task (TaskScheduler)</Button>
        <Button Click="StartAA">Start Async/Await</Button>
        <Button Click="StartDB">DB mit Async/Await</Button>
        <Button Click="StartAlt">Alte, langsame, Methode Async/Await</Button>
        
        <ProgressBar Height="22" Name="pb1"/>
        <Button Click="Abbrechen" >Abbrechen</Button>
    </StackPanel>
</Window>
